<p id="notice"><%= notice %></p>

<h1>Balance Banks</h1>

<table>
  <thead>
    <tr>
      <th>Balance</th>
      <th>Balance achieve</th>
      <th>Code</th>
      <th>Enable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @balance_banks.each do |balance_bank| %>
      <tr>
        <td><%= balance_bank.balance %></td>
        <td><%= balance_bank.balance_achieve %></td>
        <td><%= balance_bank.code %></td>
        <td><%= balance_bank.enable %></td>
        <td><%= link_to 'Show', balance_bank %></td>
        <td><%= link_to 'Edit', edit_balance_bank_path(balance_bank) %></td>
        <td><%= link_to 'Destroy', balance_bank, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

